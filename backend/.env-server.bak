# AI智能体系统 - 服务器部署配置文件
# 此文件包含远程部署所需的所有配置信息

# ==================== 基础配置 ====================
PROJECT_NAME=aiagent
DEPLOY_PATH=/root/aiagent
NODE_ENV=development

# ==================== Git配置 ====================
GIT_REPO=https://github.com/user/aiagent.git
GIT_BRANCH=main

# ==================== 端口配置 ====================
API_PORT=8001
FRONTEND_PORT=3000
LINE_PORT=3003
MONGODB_PORT=27017
REDIS_PORT=6379

# ==================== 数据库配置 ====================
MONGODB_DATABASE=aiagent
REDIS_DATABASE=0

# ==================== AI模型API密钥 ====================
# OpenAI配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Claude配置
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini配置
GOOGLE_AI_API_KEY=AIzaSyCAWckxmtKkHq4ELpEkvViz4bsLUc2SOHw

# ==================== LINE Bot配置 ====================
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# ==================== 安全配置 ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this-in-production
BCRYPT_ROUNDS=12

# ==================== 速率限制 ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# ==================== CORS配置 ====================
CORS_ORIGIN=*
CORS_ENABLED=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# ==================== 文件上传配置 ====================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# ==================== 邮件配置 ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=AI Agent <noreply@aiagent.com>

# ==================== Slack集成 ====================
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#alerts

# ==================== 外部API ====================
STOCK_API_KEY=your-stock-data-api-key
STOCK_API_BASE_URL=https://api.stockdata.com

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_DATE_PATTERN=YYYY-MM-DD
REQUEST_LOG_ENABLED=true
REQUEST_LOG_FORMAT=combined
DEBUG_LOG_ENABLED=false
DEBUG_LOG_LEVEL=debug
PERFORMANCE_LOG_ENABLED=true
PERFORMANCE_LOG_THRESHOLD=1000

# ==================== 监控配置 ====================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# ==================== 缓存配置 ====================
CACHE_TTL=3600
CACHE_MAX_KEYS=1000
REDIS_KEY_PREFIX=line_bot:

# ==================== 备份配置 ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ai-agent-backups
BACKUP_S3_REGION=ap-northeast-1

# ==================== AWS配置 ====================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1

# ==================== MCP数据服务配置 ====================
MCP_TIMEOUT=30000
MCP_RETRY_COUNT=3
MCP_CACHE_TTL=300

# ==================== 安全配置 ====================
HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false

# ==================== Session配置 ====================
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true

# ==================== 功能开关 ====================
FEATURE_USER_BLOCKING=true
FEATURE_MESSAGE_ANALYTICS=true
FEATURE_WEBHOOK_SIMULATION=true
FEATURE_CUSTOM_HANDLERS=false
FEATURE_RICH_MENU=false
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_MULTICAST_MESSAGES=true
FEATURE_BROADCAST_MESSAGES=false

# ==================== 版本要求 ====================
REQUIRED_NODE_VERSION=18.0.0
REQUIRED_PYTHON_VERSION=3.11

# ==================== Redis配置详细 ====================
REDIS_HOST=localhost
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ==================== MongoDB配置详细 ====================
MONGODB_URI=mongodb://localhost:27017/aiagent
MONGODB_TEST_URI=mongodb://localhost:27017/aiagent-test

# ==================== API版本 ====================
API_VERSION=v1

# ==================== 主机配置 ====================
HOST=0.0.0.0