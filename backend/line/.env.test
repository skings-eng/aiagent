# Test Environment Configuration
NODE_ENV=test
TEST_MODE=true

# LINE Bot Configuration (Test)
LINE_CHANNEL_ACCESS_TOKEN=test_channel_access_token
LINE_CHANNEL_SECRET=test_channel_secret

# Server Configuration
PORT=3004
HOST=localhost

# Redis Configuration (Test Database)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=line_bot_test:

# Logging Configuration (Minimal for tests)
LOG_LEVEL=error
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=1m
LOG_MAX_FILES=1
LOG_DATE_PATTERN=YYYY-MM-DD

# Request Logging (Disabled for tests)
REQUEST_LOG_ENABLED=false
REQUEST_LOG_FORMAT=combined

# Debug Logging (Disabled for tests)
DEBUG_LOG_ENABLED=false
DEBUG_LOG_LEVEL=error

# Performance Logging (Disabled for tests)
PERFORMANCE_LOG_ENABLED=false
PERFORMANCE_LOG_THRESHOLD=5000

# Rate Limiting (Relaxed for tests)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MESSAGE=Too many requests in test

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=false

# Security Configuration (Relaxed for tests)
HELMET_ENABLED=false
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
