# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# Server Configuration
PORT=3003
NODE_ENV=development
HOST=0.0.0.0

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=line_bot:

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Request Logging
REQUEST_LOG_ENABLED=true
REQUEST_LOG_FORMAT=combined

# Debug Logging
DEBUG_LOG_ENABLED=false
DEBUG_LOG_LEVEL=debug

# Performance Logging
PERFORMANCE_LOG_ENABLED=true
PERFORMANCE_LOG_THRESHOLD=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=false

# Security Configuration
HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Webhook Configuration
WEBHOOK_PATH=/webhook
WEBHOOK_VERIFY_SIGNATURE=true
WEBHOOK_RATE_LIMIT_ENABLED=true
WEBHOOK_RATE_LIMIT_MAX=1000
WEBHOOK_RATE_LIMIT_WINDOW=60000

# Message Configuration
MESSAGE_CACHE_TTL=86400
MESSAGE_RATE_LIMIT_ENABLED=true
MESSAGE_RATE_LIMIT_MAX=500
MESSAGE_RATE_LIMIT_WINDOW=60000

# User Configuration
USER_CACHE_TTL=86400
USER_PROFILE_CACHE_TTL=21600
USER_ACTIVITY_UPDATE_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_ENDPOINT=
MONITORING_API_KEY=

# External APIs
EXTERNAL_API_TIMEOUT=10000
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RETRY_DELAY=1000

# Development Configuration
DEV_MODE=false
DEV_MOCK_LINE_API=false
DEV_MOCK_REDIS=false
DEV_AUTO_RELOAD=true

# Testing Configuration
TEST_MODE=false
TEST_REDIS_DB=1
TEST_LOG_LEVEL=error
TEST_TIMEOUT=30000

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs
API_DOCS_TITLE=LINE Bot Service API
API_DOCS_VERSION=1.0.0

# Playground
PLAYGROUND_ENABLED=false
PLAYGROUND_PATH=/playground

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_MAX_KEYS=10000
CACHE_COMPRESSION_ENABLED=false

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true

# File Upload Configuration
FILE_UPLOAD_ENABLED=false
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
FILE_UPLOAD_PATH=./uploads

# Webhook Events Configuration
WEBHOOK_EVENTS_CACHE_ENABLED=true
WEBHOOK_EVENTS_CACHE_TTL=3600
WEBHOOK_EVENTS_MAX_CACHE_SIZE=1000

# Rich Menu Configuration
RICH_MENU_ENABLED=false
RICH_MENU_DEFAULT_ID=

# Analytics Configuration
ANALYTICS_ENABLED=false
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_BATCH_SIZE=100

# Notification Configuration
NOTIFICATION_ENABLED=false
NOTIFICATION_WEBHOOK_URL=
NOTIFICATION_SLACK_WEBHOOK=
NOTIFICATION_EMAIL_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Timezone Configuration
TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD HH:mm:ss

# Localization Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ja,zh-TW,zh-CN,ko

# Feature Flags
FEATURE_USER_BLOCKING=true
FEATURE_MESSAGE_ANALYTICS=true
FEATURE_WEBHOOK_SIMULATION=true
FEATURE_CUSTOM_HANDLERS=false
FEATURE_RICH_MENU=false
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_MULTICAST_MESSAGES=true
FEATURE_BROADCAST_MESSAGES=false