# Development Dockerfile for LINE Bot Service

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install development dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git \
    curl \
    bash \
    vim

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY src/ ./src/
COPY nodemon.json ./
COPY .eslintrc.js ./
COPY jest.config.js ./

# Create necessary directories
RUN mkdir -p logs uploads backups dist

# Expose ports
# 3003 - Main application port
# 9229 - Node.js debugging port
EXPOSE 3003 9229

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:3003/api/health || exit 1

# Start development server with debugging
CMD ["npm", "run", "dev"]