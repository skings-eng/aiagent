# Server Configuration
PORT=8000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/japan-stock-ai
MONGODB_TEST_URI=mongodb://localhost:27017/japan-stock-ai-test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# AI Model Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Japan Stock AI <noreply@japanstockai.com>

# Slack Integration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#alerts

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# External APIs
STOCK_API_KEY=your-stock-data-api-key
STOCK_API_BASE_URL=https://api.stockdata.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Cache
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=japan-stock-ai-backups
BACKUP_S3_REGION=ap-northeast-1

# AWS Configuration (for S3 backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
# MCP股票数据服务配置
MCP_PYTHON_PATH=/Users/sking/aiagent/backend/api/mcp-yfinance-server/venv/bin/python
MCP_SERVER_PATH=/Users/sking/aiagent/backend/api/mcp-yfinance-server/server.py
MCP_TIMEOUT=30000
MCP_RETRY_COUNT=3
MCP_CACHE_TTL=300
